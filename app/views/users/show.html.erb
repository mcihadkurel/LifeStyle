<div class="container">

<h1>Hi; <br><%= @user.email %></h1>
<div class="col-6">
<%= image_tag(current_user.avatar, alt: "avatar", class: "avatar rounded-circle", id: "avatar") %>
</div>

</div>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>
<div class="container mt-5">

<h2 class="text-center">Sign up</h2>
  <div class="field">
    <div class="gravatar_edit">
    <%= f.label :Profilepic %><br />
      <%= f.file_field :avatar, class: "form-control",
        placeholder: 'Upload picture',
        id: "change-img-field",
        direct_upload: true
        %>
    </div>
  </div>

  <div class="field">
    <%= f.label :name %><br />
    <%= f.text_field :name, autofocus: true, autocomplete: "username", class: "form-control" %>
  </div>

  <div class="field">
    <%= f.label :email %><br />
    <%= f.email_field :email, autocomplete: "email", class: "form-control" %>
  </div>

  <div class="actions text-center mt-5">
    <%= f.submit "Sign up", class: "btn btn-lg btn-info" %>
  </div>
<% end %>

  </div>